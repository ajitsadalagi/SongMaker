<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Professional text input style -->
    <style name="Widget.SongMaker.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/bg_edittext_selector</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- Primary action button (e.g. Generate, Convert, Create song) -->
    <style name="Widget.SongMaker.Button.Primary" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Secondary action button (e.g. Play, Stop) -->
    <style name="Widget.SongMaker.Button.Secondary" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@color/button_secondary_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">44dp</item>
    </style>
</resources>
